{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "outDir": "lib/",
    "baseUrl": "./src",
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib"
  ]
}
